    <exercise>
      <title>
        Limits "at" Infinity
      </title>
      <introduction>
        <p>
          Find each of the following limits
        </p>
      </introduction>
      <task>
        <statement>
          <p>
            <m>\limit{x}{\infty}{\frac{-x}{x}}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{\infty}{\frac{-x}{x}}=-1</m>
          </p>
        </solution>
      </task>
      <task>
        <statement>
          <p>
            <m>\limit{x}{-\infty}{\frac{\abs{x}}{x}}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{-\infty}{\frac{\abs{x}}{x}}=-1</m>
          </p>
        </solution>
      </task>
      <task>
        <statement>
          <p>
            <m>\limit{x}{\infty}{\frac{3x^2-x}{2x^2+1}}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{\infty}{\frac{3x^2-x}{2x^2+1}}=3/2</m>
          </p>
        </solution>
      </task>
      <task>
        <statement>
          <p>
            <m>\limit{x}{\infty}{\frac{\sqrt{x^2+1}}{x+1}}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{\infty}{\frac{\sqrt{x^2+1}}{x+1}}=1</m>
          </p>
        </solution>
      </task>
      <task>
        <statement>
          <p>
            <m>\limit{x}{-\infty}{\frac{\sqrt{x^2+1}}{x+1}}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{-\infty}{\frac{\sqrt{x^2+1}}{x+1}}-1</m>
          </p>
        </solution>
      </task>
      <task>
        <statement>
          <p>
            <m>\limit{x}{\infty}{\left(\sqrt{x+9}-\sqrt{x+4}\right)}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{\infty}{\left(\sqrt{x+9}-\sqrt{x+4}\right)}=0</m>
          </p>
        </solution>
      </task>
      <task>
        <statement>
          <p>
            <m>\limit{x}{-\infty}{\left(\sqrt{x+9}-\sqrt{x+4}\right)}</m>
          </p>
        </statement>
        <solution>
          <p>
            <m>\limit{x}{-\infty}{\left(\sqrt{x+9}-\sqrt{x+4}\right)}=0</m>
          </p>
        </solution>
      </task>    
</exercise>
