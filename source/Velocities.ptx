<p>
      <m>t=\frac{2\pi}{3}</m>
</p>
    </statement>
  </task>
  <task>
    <statement>
<p>
      <m>t=\pi</m>
</p>
    </statement>
  </task>
  <task>
    <statement>
<p>
      <m>t=-\frac{\pi}{3}</m>
</p>
    </statement>
  </task>
</exercise>
