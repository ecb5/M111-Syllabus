      <exercise >
        <statement>
          <p>
            <m>\limit{x}{2}{\frac{\sqrt{4x+1}-3}{x-2}}</m>
          </p>
        </statement>

<solution>
<p>
<md>

<mrow>
\limit{x}{2}{\frac{\sqrt{4x+1}-3}{x-2}}
\amp=\limit{x}{2}{\left(\frac{\sqrt{4x+1}-3}{x-2}\cdot\frac{\sqrt{4x+1}+3}{\sqrt{4x+1}+3}\right)}
</mrow>
<mrow>
\amp=\limit{x}{2}{\frac{4x+1-9}{(x-2)(\sqrt{4x+1}+3)}}
</mrow>
<mrow>
\amp=\limit{x}{2}{\frac{4(x-2)}{(x-2)(\sqrt{4x+1}+3)}}
</mrow>
<mrow>
\amp=1
</mrow>
</md></p>
</solution>

