        <statement>
          <p>
            <m>\limit{x}{1}{\frac{x^6-1}{x-1}}</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\limit{x}{1}{\frac{x^6-1}{x-1}}= 6</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
