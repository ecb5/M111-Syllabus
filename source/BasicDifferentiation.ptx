    <exercise>
      <statement>
        <p>
          <m> \dx{y} =      \dfrac{x^3-2x^2-x+2}{x-2}</m>
        </p>
      </statement>
      <answer>
        <p>
          <m> \dx{y} = 2x\dx{x}</m>
        </p>
      </answer>
    </exercise>
    <exercise>
      <statement>
        <p>
          <m>y=\dfrac{x^3-1}{x^2+x+1}</m>
        </p>
      </statement>
      <!-- <hint> -->
